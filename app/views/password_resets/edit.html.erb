<div class="row">
  <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
    <h1>密码重置</h1>

    <%= form_for(@user, url: password_reset_path(params[:id]),method: :put ) do |f|%>
      <%= hidden_field_tag(:account, params[:account])%>
      <%= hidden_field_tag(:digest, params[:digest])%>
      <div class="form-group">
        <%= f.label "新密码"%>
        <%= f.password_field :password, class: "form-control input-lg"%>
      </div>

      <div class="form-group">
        <%= f.label "密码确认"%>
        <%= f.password_field :password_confirmation, class: "form-control input-lg"%>
      </div>
      <%= f.submit "更新密码", class: "btn btn-primary form-control"%>
    <%end%>
  </div>
</div>