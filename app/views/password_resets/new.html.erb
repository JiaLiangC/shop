<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h1>忘记密码</h1>

    <%= form_for(:password_reset,url: password_resets_path) do |f|%>
      <div class="form-group">
        <%= f.text_field :account, autofocus: true,class: "form-control   input-lg account",id: "account",autocomplete: "off", placeholder: "请输入邮箱或者手机号" %>
      </div>
      
      <div class="form-group">
        <div class="input-group">
          <%= rucaptcha_input_tag(class: 'form-control input-lg', placeholder: "请输入验证码") %>
          <span class="input-group-addon input-group-captcha">
            <a class="rucaptcha-image-box" href="#">
              <%= rucaptcha_image_tag %>
            </a>
          </span>
        </div>
      </div>

      <div class="form-group sms  hidden">
        <%= f.text_field :verify_code, class: "form-control input-lg",placeholder: "短信验证码"%>
        <%= link_to "点击获取", "javascript:void(0);", class: "send-sms js-send-sms",data: {env: "reset_password"}%>
      </div>

      <%= f.submit "提交", class: "btn btn-primary"%>
    <%end%>
  </div> 
</div>